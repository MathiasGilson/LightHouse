{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "prettier/prettier": ["error", {
            "useTabs": true,
            "tabWidth": 4,
            "semi": false,
            "bracketSpacing": true,
            "printWidth": 110
        }],
        "no-console": 0
    }
}